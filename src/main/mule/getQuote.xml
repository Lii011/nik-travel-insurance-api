<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
	<sub-flow name="getQuoteSub_Flow" doc:id="dae3ed2f-2f67-43c9-9e8c-945fa922d242" >
		<logger level="INFO" doc:name="request received" doc:id="f4a05b0e-ffc7-4fa7-a51d-c454c937b5c1" message="request record  to get quotes"/>
		<ee:transform doc:name="set variables" doc:id="d8aff592-aec6-4311-af49-268746dee27a" >
			<ee:message >
			</ee:message>
			<ee:variables >
				<ee:set-variable variableName="age" ><![CDATA[%dw 2.0
output application/json
---
attributes.queryParams.age]]></ee:set-variable>
				<ee:set-variable variableName="destination" ><![CDATA[%dw 2.0
output application/json
---
attributes.queryParams.destination]]></ee:set-variable>
				<ee:set-variable variableName="tripStartDate" ><![CDATA[%dw 2.0
output application/json
---
attributes.queryParams.tripEndDate]]></ee:set-variable>
				<ee:set-variable variableName="tripEndDate" ><![CDATA[%dw 2.0
output application/json
---
attributes.queryParams.tripEndDate]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
		<ee:transform doc:name="read insurance plans" doc:id="2b83fe12-691f-4916-a0fa-aa6d881ffe22" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---

readUrl("classpath://Travel_Insurance_Plans.json", "application/json")

]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<ee:transform doc:name="response" doc:id="97bae275-f8f6-478c-9b61-a013d58dda23" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
payload map((item,index) ->
{	
	"plan": item.plan,
	"coverage": item.coverage,
	"premium": 
	(((item.brackets filter ($.maxAge > vars.age and $.minAge < vars.age))[0].premiumPerDay
	*
	(daysBetween((vars.tripStartDate as Date),(vars.tripEndDate as Date))+1)))
})]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<logger level="INFO" doc:name="request completed" doc:id="9b12673d-83d2-421a-acc7-0089ace5fd40" message="request completed successfully to get quotes"/>
	</sub-flow>
</mule>
